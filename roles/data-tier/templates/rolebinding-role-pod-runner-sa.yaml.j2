---
# Bind the Pod-runner role
# to our ServiceAccount
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: data-manager-api-pod-runner
  namespace: {{ dt_namespace }}
roleRef:
  kind: Role
  name: pod-runner
  apiGroup: rbac.authorization.k8s.io
subjects:
- kind: ServiceAccount
  name: data-manager-api
  namespace: {{ dt_namespace }}
