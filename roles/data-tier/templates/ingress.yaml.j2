---
kind: Ingress
apiVersion: networking.k8s.io/v1beta1
metadata:
  name: data-tier
  namespace: {{ dt_namespace }}
  annotations:
    ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: "nginx"
    cert-manager.io/cluster-issuer: "letsencrypt-nginx-{{ dt_cert_issuer|lower }}"
    nginx.ingress.kubernetes.io/proxy-body-size: "{{ dt_ingress_proxy_body_size }}"
    nginx.ingress.kubernetes.io/enable-cors: "true"
    nginx.ingress.kubernetes.io/cors-allow-credentials: "true"
spec:
  tls:
  - hosts:
    - {{ dt_hostname }}
    secretName: data-tier-tls
  rules:
  - host: {{ dt_hostname }}
    http:
      paths:
      - path: /{{ dt_hostname_path }}
        backend:
          serviceName: data-tier
          servicePort: http
